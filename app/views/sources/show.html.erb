<div class="row">

  <div class="span9">
    <h1><%= @source.name %></h1>
    <p><%= @source.descripccion %></p>

    <h4>Notes</h4>
    <% @source.notes.each do |n| %>
        <p><%= n.noteText  %></p>
        <p>Created: <%= n.created_at %></p>
        <br>
    <% end %>
  </div>

  <div class="span3">
    <h3>Helpful links</h3>
    <ul class="nav nav-tabs nav-stacked">
      <li >
        <%= link_to "/"+@source.path do %>
            <i class="icon-download"></i> download
        <% end %>
      </li>
      <li>
        <%= link_to source_notes_path(@source) do%>
            <i class="icon-pencil"></i> add note
        <% end %>
      </li>
      <li>
        <%= link_to sources_path do%>
            <i class="icon-book"></i> sources
        <% end %>
      </li>
      <li>
        <%= link_to"#" do %>
            <i class="icon-user"></i> profile
        <% end %>
      </li>
    </ul>

  </div>

</div>

