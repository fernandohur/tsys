<!DOCTYPE html>
<html>
<head>
  <title>Tsys</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <p><%= flash[:notice] %></p>
    </div>
<% end %>
<% if flash[:error] %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <p><%= flash[:error] %></p>
    </div>
<% end %>

<%= yield %>

</body>
</html>
