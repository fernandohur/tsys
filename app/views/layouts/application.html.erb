<!DOCTYPE html>
<html>
<head>
  <title>Tsys</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "fullcalendar" %>
  <%= stylesheet_link_tag "fullcalendar" %>
  <%= csrf_meta_tags %>
</head>
<body>



<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="brand" href="#">T-sys</a>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li>
            <%= link_to theses_path do %>
                <i class="icon-file"></i> thesis
            <% end %>
          </li>
          <li>
            <%= link_to sources_path do%>
                <i class="icon-book"></i> sources
            <% end %>
          </li>
          <li>
            <%= link_to meetings_path do%>
                <i class="icon-calendar"></i> meetings
            <% end %>
          </li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>



<div style="margin-top: 60px;">
  <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p><%= flash[:notice] %></p>
      </div>
  <% end %>
  <% if flash[:error] %>
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p><%= flash[:error] %></p>
      </div>
  <% end %>
  <div class="container">
    <%= yield %>
  </div>
</div>

</body>
</html>
