<%= render_title "Create product", " upload a new product to the system." %>
<div class="container">

  <%= form_tag( {:action => "index"},:multipart=>"true",:class => "form-horizontal") do  %>


      <div class="control-group">
        <%= label_tag :name,nil ,:class=>"control-label",:for=>:name %>
        <div class="controls">
          <%= text_field_tag :name %>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :File,nil ,:class=>"control-label",:for=>:path%>
        <div class="controls">
          <%= file_field_tag 'file' %>
        </div>
      </div>
      <br>
      <%= submit_tag "Upload" ,:class=>"btn btn-primary"%>
  <% end %>
</div>
